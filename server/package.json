{
    "name": "collegebook-server",
    "description": "automated-system-for-recording-student-attendance",
    "version": "1.0.0",
    "main": "src/index.js",
    "author": "Berkov Denis <denchikarabik@gmail.com>",
    "homepage": "https://github.com/deniska-sosiska/CollegeBook-MEVN-stack#readme",
    "license": "ISC",
    "scripts": {
        "start": "nodemon --watch src --exec npm run check-and-build-run",
        "serve": "babel-node --require dotenv/config dist/index.js",
        "build": "rimraf ./dist && babel src/ -d dist/",
        "build-run": "npm run build && npm run serve",
        "check": "npm run flow && npm run eslint",
        "check-and-build-run": "npm run check && npm run build-run",
        "eslint": "eslint src; exit 0",
        "flow": "flow; exit 0",
        "flow-typed-install": "flow-typed install -s"
    },
    "dependencies": {
        "boom": "^7.3.0",
        "cors": "^2.8.5",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "express-promise-router": "^4.0.1",
        "mongoose": "^6.0.10",
        "nodemon": "^2.0.6"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.8",
        "@babel/core": "^7.16.7",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-flow": "^7.16.7",
        "eslint": "^8.6.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "flow-bin": "^0.169.0",
        "flow-typed": "^3.6.1",
        "rimraf": "^3.0.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deniska-sosiska/CollegeBook-MEVN-stack.git"
    },
    "bugs": {
        "url": "https://github.com/deniska-sosiska/CollegeBook-MEVN-stack/issues"
    }
}
